{
  "manifest_version": 3,
  "name": "SecureEx",
  "description": "An Extension to detect authenticity and safety of a website",
  "version": "1.0",
  "icons":{
    "16":"/images/logo-16.png",
    "48":"/images/logo-48.png",
    "128":"/images/logo-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest"
  ],
  "action": {
    "default_icon":{
      "16":"/images/logo-16.png",
      "48":"/images/logo-48.png",
      "128":"/images/logo-128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*/*"
  ]
}